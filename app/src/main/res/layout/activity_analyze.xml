<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/blue_style">
        <ImageView
            android:id="@+id/ll_ll_img_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@mipmap/icon_back"/>
        <TextView
            android:id="@+id/analyze_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30sp"
            android:textColor="#fff"
            android:gravity="center"
            android:text="我是头部"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

    <ImageView
        android:id="@+id/analyze_img_head"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:src="@mipmap/icon_sms"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ll_ll_img_content1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_sms_content1"/>
        <TextView
            android:id="@+id/ll_ll_tv_content1"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="手机号码"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_ll_content2_group"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ll_ll_img_content2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_sms_content2"/>
        <TextView
            android:id="@+id/ll_ll_tv_content2"
            android:textSize="18sp"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="短信内容"/>
    </LinearLayout>
    <Button
        android:id="@+id/ll_btn_send"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@color/blue_style"
        android:textColor="#fff"
        android:text="发送短信"/>

    </LinearLayout>
</LinearLayout>
